{{! Testimonial Slider Template }}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container">
    <div class="text-center">
        <h5 class="section-title  text-center text-primary font-weight-bold animated slideInDown px-3">
            Testimonials
        </h5>                     
        <h1 class="mb-5 animated slideInDown"> What Our Students Say!</h1>
    </div>
    <div class="row py-3">
        <div class="col">
            <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
                <!-- Carousel indicators -->
                
                <!-- Wrapper for carousel items -->
                <div class="carousel-inner">
                    {{#slides}}
                        <div class="carousel-item {{#isFirst}}active{{/isFirst}}">
                            <div class="row">
                                {{#users}}    
                                    <div class="col-sm-4">
                                        <div class="card shadow carousel-card" style=" padding-top: 20px;
                                margin-bottom: 50px;
                                border-top-left-radius: 80px;
                                border-bottom-right-radius: 80px;
                                background-color: #917cee;
                                color: #fff;  padding-bottom: 20px;">
                                            <span class="align-self-center mt-3">{{{picture}}}</span>
                                            <div class="card-body">
                                                <h5 class="overview card-title text-center ">{{firstname}} {{lastname}}</h5>
                                                <p class="text-center"><b>{{role}}</b></p>
                                                <p class="card-text text-center">{{comment_content}}</p>
                                            </div>
                                        </div>
                                    </div>            
                                {{/users}}            
                            </div>
                        </div>
                    {{/slides}}    
                </div>
               
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
        var carousel = new bootstrap.Carousel(document.getElementById("myCarousel"), {
            interval: 3000, // Auto-slide every 3 seconds
            wrap: true
        });
    });
</script>

