 <!-- Categories Start -->
<div class="container-fluid py-5 ">
    <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
        <h5 class="section-title bg-white text-center text-primary font-weight-bold animated slideInDown py-3">Categories</h5>
        <h1 class="mb-5 animated slideInDown">Courses Categories</h1>
    </div>
    <div class="row g-4 justify-content-center d-flex">
        {{#catdata}}
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="course-item bg-light">
                    <div class="position-relative overflow-hidden animated slideInDown ">
                        
                        {{{description}}}
                        <div class="bg-white text-center py-2 px-3" style="margin: 1px; position:absolute; bottom:15px; right:0px;">
                            <h5 class="animated slideInDown">{{name}}</h5>
                            <small class="text-primary animated slideInDown">{{coursecount}} Courses</small>
                        </div>
                    </div>

                </div>
            </div>
        {{/catdata}}
    </div>
</div>