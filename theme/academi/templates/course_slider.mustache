<div id="courseCarousel" class="carousel slide my-5" data-bs-ride="carousel">
    <h3 class="text-center mb-4">Course Slider</h3>
    <div class="carousel-inner">
        {{#slides}}
        <div class="carousel-item {{#first}}active{{/first}}">
            <div class="container-sm d-flex justify-content-around">
                {{#courses}}
                <div class="card" style="width: 18rem;">
                    <img src="{{image}}" class="card-img-top" alt="{{title}}">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{summary}}</p>
                        <a href="{{url}}" class="btn btn-primary">View Course</a>
                    </div>
                </div>
                {{/courses}}
            </div>
        </div>
        {{/slides}}
    </div>

   
</div>

